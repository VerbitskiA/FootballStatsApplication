@model List<LeagueViewModel>

<form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">    
    <div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <input id="leagueName" name="leagueName" type="radio" value="@Model[i].LeagueName" />
            <span>@Model[i].LeagueName</span> <br />
        }

        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>